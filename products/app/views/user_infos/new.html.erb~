
<%= form_for @info, url: profile_path do |f| %>>
<%= @user = User.find(@info.user_id.to_i)%>
<%= f.hidden_field :user_id, value: @user.id%>

<%= f.label :name %>
<%= f.text_field :name %>
<br>

<%= f.label :file %>
<%= f.file_field :file %>
<br>

<%= f.label :memo %>
<%= f.text_field :memo %>
<br>

<%= f.submit '登録' %>

<% end %>
